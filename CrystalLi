class Animal(object):
    def __init__(self, name='aardvark', ancestry=None):
        self.name=name
        if ancestry==None: ancestry=('God')
        self.ancestry=ancestry
        return
    def __repr__(self):
        return self.__class__.__name__+"(name="+self.name+", ancestors="+repr(self.ancestry)+")"
    def __str__(self):
        return self.name
    def __add__(self, mate):
        return Animal(name="%s x %s hybrid" % (self.name, mate.name) if not self.name == mate.name else self.name, ancestry=(self.ancestry, mate.ancestry))
